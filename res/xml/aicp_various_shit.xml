<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/various_shit_title"
        android:key="various_shit_screen">

    <!-- Battery percentage -->
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_show_battery_percent"
            android:title="@string/battery_percentage_title"
            android:summary="@string/battery_percentage_summary" />

    <!-- QS one finger pull -->
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_quick_qs_pulldown"
            android:title="@string/status_bar_quick_qs_pulldown_title"
            android:summary="@string/status_bar_quick_qs_pulldown_summary" />

    <!-- Statusbar brightness control -->
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_brightness_control_title"
            android:summary="@string/status_bar_brightness_control_summary" />

    <!-- Proximity on wake -->
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="proximity_on_wake"
            android:title="@string/proximity_on_wake_title"
            android:summary="@string/proximity_on_wake_summary" />

</PreferenceScreen>
